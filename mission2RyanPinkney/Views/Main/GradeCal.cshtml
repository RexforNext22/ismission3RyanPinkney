@{

    ViewData["Title"] = "Grade Calculator";
}

@model GradeCal;

<!--Grade calcualtor form-->
<h3 style="style=" text-align: center; display: inline-block; margin-left: 30%; margin-right: 20%;">Grade Calculator</h3>
<br />
<form style="style=" text-align: center; display: inline-block; margin-left: 30%; margin-right: 20%;" method="POST">
    <label>Assignments</label> <!--Place for the user to input the grade percentage-->
    <input id="Assignment" type="text" asp-for="iAssignment" /><br /><br />
    <label>Group Project</label> <!--Place for the user to input the grade percentage-->
    <input id="GroupProject" type="text" asp-for="iGroupProject" /><br /><br />
    <label>Quizzes</label> <!--Place for the user to input the grade percentage-->
    <input id="Quizzes" type="text" asp-for="iQuizzes" /><br /><br />
    <label>Exams</label> <!--Place for the user to input the grade percentage-->
    <input id="Exams" type="text" asp-for="iExams" /><br /><br />
    <label>INTEX</label> <!--Place for the user to input the grade percentage-->
    <input id="INTEX" type="text" asp-for="iINTEX" /><br /><br />
    <input id="cal" type="submit" value="Calculate Grade" /> <!--Button to submit the information in the form-->
    <!--To run the logic in javascript add id="cal"-->
    <div asp-validation-summary="All"></div>
</form>