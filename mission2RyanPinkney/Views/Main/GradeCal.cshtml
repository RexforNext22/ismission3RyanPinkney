@{

    ViewData["Title"] = "Grade Calculator";
}


<!--Grade calcualtor form-->
<h3 style="text-align: center; display: inline-block; ">Grade Calculator</h3>
<br />
<form style="text-align: center; display: inline-block; ">
    <lable>Please enter your grade as a percentage.</lable> <!--Place for the user to input the grade percentage-->
    <input id="percent" type="text" />
    <input id="cal" type="button" value="Calculate Grade" /> <!--Button to submit the information in the form-->
</form>